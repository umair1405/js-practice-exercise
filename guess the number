let x = Math.random() * 100;
x = Math.round(x)

console.log(x)
let score = 0;
 for (i = 0; i < 100 ; i++){
let a = prompt('enter the number :   ')
a = Number.parseInt(a)

 if (a == x ){
     console.log('You have enter the correct number')
     
let remain =  100 - score
console.log ('Your score is '+ remain)
 }
 else if(a > x ){ 
     console.log("your  number is greater then the original  number")
      score = score + 1
 }
 
 else if (a < x ){
     console.log('Your number is less then orignal number')
      score = score   + 1
 }
 else {
     console.log('Enter the valid number ')
 }}
